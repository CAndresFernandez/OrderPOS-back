{% extends 'base.html.twig' %}

{% block title %}
  Category
{% endblock %}

{% block body %}
  <h1>Category</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Name</th>
        <td>{{ category.name }}</td>
      </tr>
      <tr>
        <th>Menu_position</th>
        <td>{{ category.menuPosition }}</td>
      </tr>
      <tr>
        <th>Active</th>
        <td>{{ category.active ? 'Yes' : 'No' }}</td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('app_back_category_index') }}">back to list</a>

  <a href="{{ path('app_back_category_edit', { id: category.id }) }}">edit</a>

  {{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
