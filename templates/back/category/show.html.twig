{% extends 'base.html.twig' %}

{% block title %}
  Category
{% endblock %}

{% block body %}
<div class="container-fluid">
  <h1>Category</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Name</th>
        <td>{{ category.name }}</td>
      </tr>
      <tr>
        <th>Menu_position</th>
        <td>{{ category.menuPosition }}</td>
      </tr>
      <tr>
        <th>Active</th>
        <td>{{ category.active ? 'Yes' : 'No' }}</td>
      </tr>
      <tr>
        <th>CreatedAt</th>
        <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>UpdatedAt</th>
        <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
    </tbody>
  </table>

  

  <a href="{{ path('app_back_category_edit', { id: category.id }) }}"><button type="button" class="btn btn-sm btn-warning mx-1 mb-2 bi bi-pencil-square"> Edit</button></a>

  {{ include('back/category/_delete_form.html.twig') }}

  <a href="{{ path('app_back_category_list') }}"><button type="button" class="btn btn-sm btn-primary mx-1 mb-2 bi bi-arrow-left-square"> Back to list</button></a>
</div>
{% endblock %}
