{% extends 'base.html.twig' %}

{% block title %}
    User list
{% endblock %}

{% block body %}
   <div>
        <h1>User List</h1>
        <button type="button" onclick="window.location.href='{{ path('app_back_user_new') }}';" class="btn btn-success bi bi-plus-lg"></button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Login</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.login }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <button type="button" onclick="window.location.href='{{ path('app_back_user_show', { id: user.id }) }}';" class="btn btn-primary btn-sm bi bi-list"></button>
                    <button type="button" onclick="window.location.href='{{ path('app_back_user_edit', { id: user.id }) }}';" class="btn btn-warning btn-sm bi bi-pencil-square"></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
