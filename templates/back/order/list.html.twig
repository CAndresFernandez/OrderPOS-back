{% extends 'base.html.twig' %}

{% block title %}Order list{% endblock %}
{% block orderActive %}
  active
{% endblock %}
{% block body %}
<div class="container-fluid">
    <h1>Order list</h1>
    {# <a href="{{ path('app_back_order_new') }}"><button type="button" class="btn btn-primary mb-3 bi bi-plus-lg"></button></a> #}

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Table</th>
                <th>Covers</th>
                <th>Status</th>
                <th>Statuts</th>
                <th>Updated At</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.user.firstname }}</td>
                <td>{{ order.relatedTable.number }}</td>
                <td>{{ order.relatedTable.covers }}</td>
                {# <td>{{ order.orderItems.id }}</td> #}
                <td>{{ order.status }}</td>
                <td>
                    {% if order.status == 0 %}
                        En commande
                    {% elseif order.status == 1 %}
                        En pr√©paration
                    {% elseif order.status == 2 %}
                        En attente de paiement
                    {% endif %}
                </td>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                <a href="{{ path('app_api_order_status', { id: order.id }) }}"><button type="button" class="btn btn-info btn-sm bi bi-eye"></button></a>
                <a href="{{ path('app_back_order_edit', { id: order.id }) }}"><button type="button" class="btn btn-warning btn-sm bi bi-pencil-square"></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
